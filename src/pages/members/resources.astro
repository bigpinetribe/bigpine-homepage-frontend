---
import BaseLayout from "../../layouts/BaseLayout.astro";
---

<BaseLayout title="Tribal Resources - Big Pine Paiute Tribe">
  <h1>Tribal Resources</h1>

  <div class="pop-section p-4 mb-4">
    <p class="lead">
      Access important documents, forms, and resources exclusively available to enrolled tribal members.
    </p>
  </div>

  <div class="row">
    <div class="col-lg-6 mb-4">
      <div class="pop-section p-4 h-100">
        <h3>Forms & Applications</h3>
        <ul class="list-unstyled">
          <li class="mb-2">
            <a href="#">Enrollment Verification Request</a>
          </li>
          <li class="mb-2">
            <a href="#">Housing Application</a>
          </li>
          <li class="mb-2">
            <a href="#">Education Assistance Application</a>
          </li>
          <li class="mb-2">
            <a href="#">Emergency Assistance Request</a>
          </li>
        </ul>
      </div>
    </div>

    <div class="col-lg-6 mb-4">
      <div class="pop-section p-4 h-100">
        <h3>Tribal Documents</h3>
        <ul class="list-unstyled">
          <li class="mb-2">
            <a href="#">Tribal Constitution</a>
          </li>
          <li class="mb-2">
            <a href="#">Tribal Ordinances</a>
          </li>
          <li class="mb-2">
            <a href="#">Meeting Minutes Archive</a>
          </li>
          <li class="mb-2">
            <a href="#">Annual Reports</a>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <div class="pop-section p-4">
    <h3>Contact Tribal Administration</h3>
    <p>
      If you need assistance accessing any resources or have questions about available programs,
      please contact the Tribal Administration office.
    </p>
    <a href="/contact" class="btn btn-primary">Contact Us</a>
  </div>
</BaseLayout>
