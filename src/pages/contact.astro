---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getGlobalSettings } from "../lib/content";

const settings = await getGlobalSettings();
const contact = settings.contact || {};
---

<BaseLayout title="Contact Us - Big Pine Paiute Tribe">
  <h1>Contact Us</h1>

  <div class="row">
    <div class="col-lg-6">
      <div class="pop-section p-4">
        <h2>Main Office</h2>
        <p>
          <strong>Big Pine Paiute Tribe of the Owens Valley</strong><br />
          {contact.address || "P.O. Box 700, Big Pine, CA 93513"}
        </p>
        <p>
          {contact.phone && <><strong>Phone:</strong> {contact.phone}<br /></>}
          {contact.fax && <><strong>Fax:</strong> {contact.fax}<br /></>}
          {contact.email && <><strong>Email:</strong> <a href={`mailto:${contact.email}`}>{contact.email}</a></>}
        </p>
      </div>

      <div class="pop-section p-4 mt-4">
        <h2>Office Hours</h2>
        <p>
          Monday - Friday<br />
          8:00 AM - 4:30 PM<br />
          <em>Closed on federal holidays</em>
        </p>
      </div>
    </div>

    <div class="col-lg-6">
      <div class="pop-section p-4">
        <h2>Location</h2>
        <p>
          The Big Pine Paiute Reservation is located in Big Pine, California, in Inyo County at
          the base of the Eastern Sierra Nevada mountains.
        </p>
        <div class="ratio ratio-4x3">
          <iframe
            src="https://www.google.com/maps?q=825+S+Main+St,+Big+Pine,+CA+93513&output=embed"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
